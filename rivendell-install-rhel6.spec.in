Summary: Rivendell Installation Script
Name: rivendell-install
Version: @VERSION@
Release: @RPM_RELEASE@%{?dist}
License: GPL
Packager: Fred Gleason <fredg@paravelsystems.com>
Group: Productivity/Multimedia/Other
Source: %{name}-@VERSION@.tar.gz
BuildRoot: /var/tmp/rivendell-install-@VERSION@



%description
Bootstrap script for installing Rivendell on an RHEL 6 system.


%prep


%setup


%build
%configure


%install
rm -rf $RPM_BUILD_ROOT
mkdir -p $RPM_BUILD_ROOT/root
cp centos6/install_rivendell.sh $RPM_BUILD_ROOT/root/
cp centos6/install_rivendell_devel.sh $RPM_BUILD_ROOT/root/

mkdir -p $RPM_BUILD_ROOT%{_datadir}/rivendell-install
cp centos6/disable-selinux.patch $RPM_BUILD_ROOT%{_datadir}/rivendell-install/
cp centos6/qt_plugins_3.3rc $RPM_BUILD_ROOT%{_datadir}/rivendell-install/
cp centos6/qtrc $RPM_BUILD_ROOT%{_datadir}/rivendell-install/
cp common/asound.conf $RPM_BUILD_ROOT%{_datadir}/rivendell-install/
cp common/*.repo $RPM_BUILD_ROOT%{_datadir}/rivendell-install/
cp common/RPM-GPG-KEY* $RPM_BUILD_ROOT%{_datadir}/rivendell-install/
cp common/autologin.patch $RPM_BUILD_ROOT%{_datadir}/rivendell-install/
cp common/*.png $RPM_BUILD_ROOT%{_datadir}/rivendell-install/
cp common/smb.conf $RPM_BUILD_ROOT%{_datadir}/rivendell-install/
cp common/docbook5.sh $RPM_BUILD_ROOT%{_datadir}/rivendell-install/
cp common/no_screen_blank.conf $RPM_BUILD_ROOT%{_datadir}/rivendell-install/

mkdir -p $RPM_BUILD_ROOT%{_datadir}/rivendell-install/skel
cp common/*.pdf $RPM_BUILD_ROOT%{_datadir}/rivendell-install/skel/


%clean
rm -rf $RPM_BUILD_ROOT


%files
%defattr(-,root,root)
/root/install_rivendell.sh
/root/install_rivendell_devel.sh
%{_datadir}/rivendell-install/*


